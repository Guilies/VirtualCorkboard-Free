<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:VirtualCorkboard.Controls">

    <!-- Style for resize thumbs -->
    <Style x:Key="ResizeThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for corner resize thumbs -->
    <Style x:Key="CornerResizeThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:BaseNoteControl}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="80"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:BaseNoteControl}">
                    <Grid>
                        <!-- Main content border -->
                        <Border x:Name="OuterBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Background="White"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <!-- Pin icon at top-middle -->
                                <controls:PinControl x:Name="Pin"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Top"
                                                     Margin="0,2,0,0"/>
                                <!-- Content placeholder for derived controls -->
                                <ContentPresenter Margin="8,24,8,8"/>
                            </Grid>
                        </Border>

                        <!-- Resize handles - only visible when selected -->
                        <Grid x:Name="ResizeGrid" Visibility="Collapsed">
                            <!-- Edge resize handles -->
                            <Thumb x:Name="TopThumb"
                                   Style="{StaticResource ResizeThumbStyle}"
                                   Height="4"
                                   VerticalAlignment="Top"
                                   Cursor="SizeNS"
                                   Margin="4,0,4,0"/>
                            <Thumb x:Name="BottomThumb"
                                   Style="{StaticResource ResizeThumbStyle}"
                                   Height="4"
                                   VerticalAlignment="Bottom"
                                   Cursor="SizeNS"
                                   Margin="4,0,4,0"/>
                            <Thumb x:Name="LeftThumb"
                                   Style="{StaticResource ResizeThumbStyle}"
                                   Width="4"
                                   HorizontalAlignment="Left"
                                   Cursor="SizeWE"
                                   Margin="0,4,0,4"/>
                            <Thumb x:Name="RightThumb"
                                   Style="{StaticResource ResizeThumbStyle}"
                                   Width="4"
                                   HorizontalAlignment="Right"
                                   Cursor="SizeWE"
                                   Margin="0,4,0,4"/>

                            <!-- Corner resize handles -->
                            <Thumb x:Name="TopLeftThumb"
                                   Style="{StaticResource CornerResizeThumbStyle}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Cursor="SizeNWSE"/>
                            <Thumb x:Name="TopRightThumb"
                                   Style="{StaticResource CornerResizeThumbStyle}"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Cursor="SizeNESW"/>
                            <Thumb x:Name="BottomLeftThumb"
                                   Style="{StaticResource CornerResizeThumbStyle}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   Cursor="SizeNESW"/>
                            <Thumb x:Name="BottomRightThumb"
                                   Style="{StaticResource CornerResizeThumbStyle}"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Cursor="SizeNWSE"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="DodgerBlue"/>
                            <Setter TargetName="ResizeGrid" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="Gray"/>
                            <Setter TargetName="ResizeGrid" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:PinControl}">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:PinControl}">
                    <Ellipse x:Name="PART_PinVisual"
                             Fill="{TemplateBinding PinColor}"
                             Stroke="Black"
                             StrokeThickness="1"
                             Cursor="Hand"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>